<div class="mt-4">
    <form method="POST">
        <div class="form-group">
            <label for="search-input" class="form-label">Search</label>
            <input type="text" name="q" class="form-control" id="search-input" placeholder="Enter keywords">
        </div>
        <div class="form-group">
            <label for="gender-input" class="form-label">Gender</label>
            <select type="text" name="gender" class="form-control" id="gender-input" placeholder="Enter keywords">
                <option value="">Choose gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        </div>
        
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>